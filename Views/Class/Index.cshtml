@using TTMS.Controllers;
@using static TTMS.Controllers.ClassController;
@model IEnumerable<ClassRecord>
@{
    //ViewData["Title"] = "Classes";
}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Manage Classes</h1>
        <a class="btn btn-md btn-outline-primary" href="~/Class/Add">add</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>

                    <th scope="col">class </th>
                    <th scope="col">action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cls in Model)
                {
                    using (Html.BeginForm("Delete", "Class", new { id = @cls.ClassID }))
                    {
                        <tr>
                            <td>@cls.Name</td>
                            <td>
                                <a class="btn btn-sm btn-outline-secondary" href="/Class/Edit?id=@cls.ClassID">edit</a>
                                <a class="btn btn-sm btn-outline-danger" href="/Class/Delete?id=@cls.ClassID" onclick="return confirm('Are you sure you want to delete @cls.Name');">delete</a>
                                <a class="btn btn-sm btn-outline-primary" href="/Class/View?id=@cls.ClassID">view timetable</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</main>


