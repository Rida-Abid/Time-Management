@using TTMS.Controllers;
@using static TTMS.Controllers.SubjectController;
@model IEnumerable<SubjectRecord>

@{
    //ViewData["Title"] = "Subjects";
}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Manage Subjects</h1>
        <a class="btn btn-md btn-outline-primary" href="~/Subject/Add">add</a>
    </div>
        
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                   
                    <th scope="col">subject</th>
                    <th scope="col">action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var subject in Model)
                {
                    using (Html.BeginForm("Delete", "Subject", new { id = @subject.SubjectID }))
                    {

                        <tr>
                            <td>@subject.Name</td>
                            <td>
                                <a class="btn btn-sm btn-outline-secondary" href="/Subject/Edit?id=@subject.SubjectID">edit</a>
                                <a class="btn btn-sm btn-outline-danger" href="/Subject/Delete?id=@subject.SubjectID"onclick="return confirm('Are you sure you want to delete @subject.Name');">delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</main>



