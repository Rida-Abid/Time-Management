@model List<SubjectViewModel>;

@{
    ViewData["Title"] = "Subjects";
}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Manage Subjects</h1>
        <a href="~/subject/addedit" class="btn btn-sm btn-outline-secondary">
            Add
        </a>
    </div>
        
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Subject Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var subject in Model)
                {
                <tr>
                    <td>@subject.SubjectID</td>
                    <td>@subject.SubjectName</td>
                    <td>
                        <a href="~/subject/edit?id=@subject.SubjectID" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a href="~/subject/delete?id=@subject.SubjectID" class="btn btn-sm btn-outline-secondary">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</main>



