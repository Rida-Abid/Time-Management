@using TTMS.Controllers;
@using static TTMS.Controllers.SubjectController;
@model IEnumerable<SubjectRecord>


@{
    //ViewData["Title"] = "Add";
}
 @using (Html.BeginForm("edit", "Subject",FormMethod.Post))
{
          
     <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Edit Subjects</h1>
        </div>
           <div class="col-md-7 col-lg-8">
        
          
        
                <div class="col-md-5">
                  <label for="Subject Name" class="form-label">Subject Name</label>
                  <select class="form-select" id="Subject Name" name="Name" required>
                    <option value="">  </option>
                    <option>English</option>
                    <option>Urdu</option>
                    <option>Mathematics</option>
                    <option>Science</option>
                    <option>Social Studies</option>
                    <option>Islamiat</option>
                    <option>Computer</option>
                    <option>Art</option>
                    <option>Physics</option>
                    <option>Biology</option>
                    <option>Chemistry</option>
                    <option>Pak Studies</option>
                  </select>
                  <div class="invalid-feedback">
                    Please select a valid Subject Name.
                  </div>
                </div>
               

          </div>
            <div class="container-fluid">
                <input type="submit" value="edit" class="btn btn-lg btn-outline-success col-md-12">
            </div>
     </main>
}