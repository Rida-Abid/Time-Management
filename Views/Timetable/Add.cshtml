 @using (Html.BeginForm("add", "Class",FormMethod.Post))
{

          
     <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Add Timetables</h1>
        </div>
          <div class="col-md-7 col-lg-8">
        
           
                <div class="col-md-5">
                <label for="Timetables" class="form-label">Timetables</label>
                <select class="form-select" id="Timetables" name="Timetables" multiple style="height:200px">
                          @foreach(var item in Model.Timetables)
                          {
                                <option value="@item.Value">@item.Text</option>
                          }
                        
