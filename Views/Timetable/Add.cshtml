                        <option>Class 5</option>
                        <option>Class 6</option>
                        <option>Class 7</option>
                        <option>Class 8</option>
                        <option>Class 9</option>
                        <option>Class 10</option>*@
                    </select>
                  <div class="invalid-feedback">
                    Please select a valid Class.
                  </div>
                </div>

            <div class="col-md-5">
                <label for="addTimetables" class="form-label">add new Timetables</label>
                <input type="text" class="form-control" id="addClass" name="Name" placeholder="" value="" required>
                <div class="invalid-feedback">
                    Valid Class is required.
                </div>
            </div>

          </div>
            <div class="container-fluid">
                <input type="submit" value="add" class="btn btn-lg btn-outline-success col-md-12">
            </div>
     </main> 
}