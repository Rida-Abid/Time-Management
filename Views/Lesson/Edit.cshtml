@using TTMS.Controllers;
@using static TTMS.Controllers.LessonController;
@model LessonRecord


@{
    //ViewData["Title"] = "Add";
}
@using (Html.BeginForm("edit", "Lesson",new {Id = @Model.LessonID },FormMethod.Post))
{
          
     <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Edit Lessons</h1>
        </div>
         <div class="col-md-7 col-lg-8">

            <div class="col-sm-5">
                <label for="LessonNo" class="form-label">LessonNo</label>
                <input type="text" class="form-control" id="LessonNo" name="Name" placeholder="" value="@Model.LessonNo" required>
                <div class="invalid-feedback">
                    Please select a valid Lesson No.
                </div>
            </div>

            <div class="col-sm-5">
                <label for="StartTime" class="form-label">SubjectName</label>
                <input type="text" class="form-control" id="StartTime" name="Name" placeholder="" value="@Model.StartTime" required>
                <div class="invalid-feedback">
                    Please select a valid StartTime.
                </div>
            </div>

            <div class="col-sm-5">
                <label for="EndTime" class="form-label">EndTime</label>
                <input type="text" class="form-control" id="EndTime" name="Name" placeholder="" value="@Model.EndTime" required>
                <div class="invalid-feedback">
                    Please select a valid EndTime.
                </div>
            </div>
        
          
         </div>
            <div class="container-fluid">
                <input type="submit" value="edit" class="btn btn-lg btn-outline-success col-md-12">
            </div>
     </main>
}