@page
@model TTMS.Controllers.IndexModel
                                                                                                                                         
@{
    /*ViewData["Title"] = "Teacher";*/
}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Manage Teachers</h1>
         <a class="btn btn-sm btn-outline-secondary" href="~/Teacher/AddEdit">add</a>
    </div>
        
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">title</th>
              <th scope="col">firstname</th>
              <th scope="col">surname</th>
              <th scope="col">email</th>
              <th scope="col">date created</th>
 
              <th scope="col">action</th>
            </tr>
          </thead>
           <tbody>
              @foreach(var item in Teacher .listTeachers)
              {
                <tr>
                    <td>@item.TeacherID</td>
                    <td>@item.Title</td>
                    <td>@item.Firstname</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.DateCreated</td>

                    <td>
                    <a class="btn btn-sm btn-outline-secondary" href="/Teacher/AddEdit?id = @item.TeacherID">edit</a>
                    <a class="btn btn-sm btn-outline-secondary" href="/Teacher/AddEdit?id = @item.TeacherID">delete</a>
                    </td>
                </tr>
              }
        </tbody>
        </table>
      </div>
</main>



