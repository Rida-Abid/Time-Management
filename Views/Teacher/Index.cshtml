@using TTMS.Controllers;
@using static TTMS.Controllers.TeacherController;
@model IEnumerable<TeacherRecord>

@{
    /*ViewData["Title"] = "Teacher";*/
}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Manage Teachers</h1>
         <a class="btn btn-md btn-outline-primary" href="~/Teacher/Add">add</a>
    </div>
        
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">title</th>
              <th scope="col">firstname</th>
              <th scope="col">surname</th>
              <th scope="col">email</th> 
              <th scope="col">action</th>
            </tr>
          </thead>
           <tbody>
              @foreach(var teacher in Model)
              {
                using (Html.BeginForm("Delete", "Teacher", new { id = @teacher.TeacherID }))
                {
                    <tr>
                        <td>@teacher.TeacherID</td>
                        <td>@teacher.Title</td>
                        <td>@teacher.Firstname</td>
                        <td>@teacher.Surname</td>
                        <td>@teacher.Email</td>

                        <td>
                                <a class="btn btn-sm btn-outline-secondary" href="/Teacher/Edit?id=@teacher.TeacherID">edit</a>
                                <a class="btn btn-sm btn-outline-danger" href="/Teacher/Delete?id=@teacher.TeacherID" onclick="return confirm('Are you sure you want to delete Teacher record for teacher @teacher.Firstname');">delete</a>
                        </td>
                    </tr>
                }
              }
        </tbody>
        </table>
      </div>
</main>



