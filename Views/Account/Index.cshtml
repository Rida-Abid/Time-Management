@model AccountViewModel;

@{
    ViewData["Title"] = "Signin";
}

<div class="text-center">
    <main class="form-signin">
        <form method="post" asp-controller="account" asp-action="Index">
            <img class="mb-4" src="~/images/logo-small.png" alt="" width="100" height="100">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
            }
            <div class="form-floating">
              <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="EmailAddress">
              <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
              <input type="password" class="form-control" id="floatingPassword" placeholder="Password" asp-for="Password">
              <label for="floatingPassword">Password</label>
            </div>
            <div class="checkbox mb-3">
              <label>
                <input type="checkbox" value="remember-me"> Remember me
              </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
      </form>
    </main>
</div>